void helloWorld(string name, int x);


//the string is first
int main()
{
 
 string mainName;
 int num;
 cout<<" Enter a name and a number";
 cin>>mainName;
 cin>>num;
 
//call hello world function    
helloWorld(mainName, num);

    
    
}


//writing the function
void helloWorld(string name, int x){
    int i;
    for(i=0;i<x;i++){
    
    
     cout<<"Hello world\n"<<name;
     
    }
     
}

