#include <iostream>
#include<string>
#include<math.h>
using namespace std;

//declare the function
void addFunct(int x, int y);
void subFunct(int x, int y);
void mulFunct(int x, int y);
void expFunct(int x, int y);


int main()
{
  int num1;
  int num2;
  
  cout<<"Enter two numbers";
  cin>>num1;
  cin>>num2;
  
  //calls the function
  addFunct(num1,num2);
  subFunct(num1,num2);
  mulFunct(num1,num2);
  expFunct(num1,num2); 
  
  
}

//writing the adding the function
void addFunct(int x, int y){
    
    cout<<" The sum is "<<x+y<<" \n";
    
}

//writing the subtracting function
void subFunct(int x, int y){
     
    cout<<" The difference is "<<x-y<<" \n";
    
}

//writing the multiplying function
void mulFunct(int x, int y){
    
    cout<<" The product is "<<x*y<<" \n";
    
}

//writing the exponent function
void expFunct(int x, int y){
    int expo= pow(x,y);
    cout<<" The answer for the exponents "<<expo<<" \n";
    
}






