#include <iostream>
#include <string> 
#include<ctype.h>
using namespace std;

void nickName(string x, string y, int l);

int main()

{
  
 string firstName;
 string lastName;
 int i;
 int len;
 
 cout<<" Enter your first name\n";
 cin>>firstName;
 cout<<" Enter you last name\n";
 cin>>lastName;
 
 nickName(firstName, lastName, len);
 
 
 
}
 
  
  
  
void nickName(string x, string y, int l){
  
  
  
    l=x.length();
 
    l = l - 3;
    
    x.append(y, 0, 2);
    
    cout<<x.replace(0, l, "");
    

  }

  
    
  

